{
    "ui.font": "Segoe UI",
    "ui.fontSize": 10,

    "editor.font": "Consolas",
    "editor.fontSize": 11,
    "editor.linePadding": 0.1,
    "editor.showLineNumbers": true,
    "editor.showWhitespace": "boundary",
    "editor.showEol": false,
    "editor.showLineLength": true,
    "editor.currentLineIndicator": true,
    "editor.delimeters": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.brackets": "(){}[]",
    "editor.matchBrackets": true,
    "editor.matchWords": true,
    "editor.useTabs": false,
    "editor.indentSize": 4,
    "editor.wordWrap": false,
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.lineEndings": "auto",
    "editor.longLineIndicators": [ 25, 80, 100 ]
}
